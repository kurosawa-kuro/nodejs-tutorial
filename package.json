{
  "name": "mysql-express-react-nodejs-typescript-boilerplate",
  "version": "1.0.0",
  "description": "backend",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node backend/server.ts",
    "server": "nodemon backend/server.ts",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cross-env DATABASE_URL='mysql://root:@localhost:3306/boilerplate_test' jest --runInBand --coverage ./backend/__test__",
    "test:client": "npm test --prefix frontend",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "prisma:migrate": "npx prisma migrate dev --name init --schema=./backend/database/prisma/schema.prisma",
    "prisma:generate": "npx prisma generate --schema=./backend/database/prisma/schema.prisma",
    "test:prisma:migrate": "cross-env DATABASE_URL='mysql://root:@localhost:3306/boilerplate_test'  npx prisma migrate dev --name init --schema=./backend/database/prisma/schema.prisma",
    "prisma:seed": "ts-node backend/database/prisma/seed/main.ts"
  },
  "author": "Toshifumi Kurosawa",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-list-endpoints": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "playwright": "^1.34.3",
    "prisma": "^4.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "@playwright/test": "^1.33.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-list-endpoints": "^6.0.0",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.2.5",
    "@types/supertest": "^2.0.12",
    "babel-jest": "^29.5.0",
    "concurrently": "^7.6.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
